{
  "shortcuts": {
    "returnToMenu": {
      "key": "q"
    },
    "cancel": {
      "key": "escape"
    }
  },
  "statusHooks": {},
  "worktree": {
    "autoDirectory": true,
    "autoDirectoryPattern": "~/worktrees/{branch}"
  },
  "worktreeHooks": {
    "post_creation": {
      "enabled": true,
      "command": "sh ~/.config/ccmanager/init_worktree.sh"
    }
  },
  "command": {
    "command": "claude",
    "args": ["--resume", "--mcp-config=~/.claude/.mcp.json"]
  },
  "commandPresets": {
    "presets": [
      {
        "id": "claude-yolo",
        "name": "Claude Code (YOLO)",
        "command": "claude",
        "args": ["--dangerously-skip-permissions"],
        "fallbackArgs": []
      },
      {
        "id": "claude-yolo-resume",
        "name": "Claude Code (YOLO Resume)",
        "command": "claude",
        "args": ["--resume", "--dangerously-skip-permissions"],
        "fallbackArgs": []
      },
      {
        "id": "claude",
        "name": "Claude Code",
        "command": "claude",
        "args": [],
        "fallbackArgs": []
      },
      {
        "id": "claude-resume",
        "name": "Claude Code (Resume)",
        "command": "claude",
        "args": ["--resume"],
        "fallbackArgs": []
      }
    ],
    "defaultPresetId": "claude-yolo",
    "selectPresetOnStart": true
  }
}
